@import './modalDialog/index.styl'


[ng\\:cloak], [ng-cloak], .ng-cloak 
  display: none;

#num
    color: blue
    font-style: italic

.header_tasck_list
    position: relative /* now anchors absolute items */

.add_button
    position: absolute
    top: -25px
    right: -24px
    background-color: yellow
    border-radius 10px

.list
    list-style none outside none
    margin 10px 0 30px

.list_name
    font-size 1.3em
    font-weight bold

.apps-container
    border 2px solid blue
    margin 10px 10px 0 0
    padding 25px

.app
    width 170px
    padding 5px 10px
    margin 5px 0
    border 2px solid #444
    border-radius 5px
    background-color #EA8A8A
    font-size 1.1em
    font-weight bold
    text-align center
    cursor move
    position: relative /* now anchors absolute items */

#screen-0 .app-0, #screen-1 .app-0
    background-color red
#screen-0 .app-1, #screen-1 .app-1
    background-color yellow

.del_button
    position: absolute
    top: 5px
    right: -24px

.edit_button
    position: absolute
    top: 5px
    left: -24px

body
    font-family Verdana, 'Trebuchet ms', Tahoma

.logList
    margin-top 20px
    width 300px
    min-height 300px
    padding 5px 15px
    border 5px solid #000
    border-radius 15px
    &:before
        content 'log'
        padding 0 5px
        position relative
        top -1.1em
        background-color #FFF

.logItem
    margin-bottom 10px

.container
    width 1200px
    margin auto

h2, h3
    text-align center

.floatleft
    float left

.floatright
    float right

.clear
    clear both

#screen-0
    background-color lightgreen
    border-radius 10px

#screen-1
    background-color lightyellow
    border-radius 10px

#screen-2
    background-color lightblue
    border-radius 10px

#screen-4
    background-color red

#loader
    position absolute
    top 50%
    left 50%
    margin-left -12%
    margin-top -10%
    z-index 2000
    .fa-spinner
        font-size 200px
    span
        margin-left 30%
        margin-top -33%
        float left
